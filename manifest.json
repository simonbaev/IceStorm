{
	"name": "Ice Storm",
	"version": "1.0",
	"description": "Customizes look and feel of GSW RAIN pages",
	"background": {
		"scripts": [
			"node_modules/jquery/dist/jquery.min.js", 
			"assets/js/background.js"
		],
		"persistent": false
	},
	"page_action": {
		"default_icon": { // optional
			"19": "assets/icons/umbrella/icon19.png",
			"38": "assets/icons/umbrella/icon38.png"
		},
		"default_title": "Turn your RAIN into Ice Storm",
		"default_popup": "popup.html"
	},
	"options_ui": {
		"page": "options.html"
	},
	"permissions": [
		"storage",
		"alarms",
		"tabs",
		"https://gsw.gabest.usg.edu/pls/B420/*"
	],
	"content_scripts": [
		{
			"matches": ["https://gsw.gabest.usg.edu/pls/B420/bwlkfcwl.P_FacClaListSum"],
			"css": ["assets/css/content_scripts/roster.css"],
			"js": [
				"node_modules/jquery/dist/jquery.min.js",
				"assets/js/content_scripts/roster.js"
			]
		},
		{
			"matches": ["https://gsw.gabest.usg.edu/pls/B420/bwlkffgd.P_FacFinGrd"],
			"css": ["assets/css/content_scripts/finals.css"],
			"js": [
				"node_modules/jquery/dist/jquery.min.js",
				"assets/js/content_scripts/finals.js"
			]
		}
	],
	"icons": {
		"16": "assets/icons/umbrella/icon16.png",
		"48": "assets/icons/umbrella/icon48.png",
		"128": "assets/icons/umbrella/icon128.png"
	},
	"manifest_version": 2
}
