{
	"name": "Umbrella",
	"version": "1.0.21",
	"description": "Customizes look and feel of GSW RAIN pages",
	"background": {
		"scripts": [
			"assets/js/jquery.js", 
			"assets/js/background.js"
		],
		"persistent": false
	},
	"page_action": {
		"default_icon": {
			"19": "assets/icons/umbrella/icon19.png",
			"38": "assets/icons/umbrella/icon38.png"
		},
		"default_title": "Don't get wet under long lasting RAIN"		
	},
	"options_ui": {
		"page": "options.html"
	},
	"permissions": [
		"storage",
		"alarms",
		"tabs",
		"https://gsw.gabest.usg.edu/pls/B420/*"
	],
	"icons": {
		"16": "assets/icons/umbrella/icon16.png",
		"48": "assets/icons/umbrella/icon48.png",
		"128": "assets/icons/umbrella/icon128.png"
	},
	"manifest_version": 2
}
